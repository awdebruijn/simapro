{% extends "base.twig" %}

{% block content %}

<header id="intro">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-1">
				<hgroup>
					<h1>{{intro.title}}</h1>
					<h2 class="lead">{{intro.content|striptags}}</h2>
				</hgroup>
				<p class="lead">
					<a href="#about" class="btn btn-primary btn-lg btn-scroll" onClick="_gaq.push(['_trackEvent', 'button', 'Read More', '{{site.url}}/#about']);">Read More</a>
					{% if intro.get_field('reseller_order_url') %}
						{% if intro.get_field('reseller_order_label') %}
							<a href="{{ intro.get_field('reseller_order_url') }}" class="btn btn-link btn-lg" onClick="_gaq.push(['_trackEvent', 'button', '{{ intro.get_field('reseller_order_label') }}', '{{ intro.get_field('reseller_order_url') }}']);">{{ intro.get_field('reseller_order_label') }}</a>
						{% else %}
							<a href="{{ intro.get_field('reseller_order_url') }}" class="btn btn-link btn-lg">Order SimaPro</a>
						{% endif %}
					{% endif %}
				</p>
				<p><small>You will be redirected to your local reseller {{ intro.get_field('reseller_name') }}</small></p>
				{% if intro.can_edit %}
                  <!--<a href="{{intro.edit_link}}">edit</a>-->
               	{% endif %}

			</div>
			<div class="col-sm-5">
				{% if intro.thumbnail.src %}
					<img src="{{intro.thumbnail.src('full')}}" class="img-responsive" />
				{% endif %}
			</div>
		</div>
	</div>
</header>

<section id="usp">
			<div class="container">
				<div class="row">
					<div class="col-sm-12"><h2>Why use Sima Pro?</h2></div>
				</div>

				<div class="row">
					{% for item in usps%}
					<div class="col-sm-4">
						<div class="usp-item">
							<h3><span class="icon icon-{{item.post_title|lower}}"></span>{{ item.post_title }}</h3>
							<p>{{ item.post_content }}</p>
						</div>
						<div class="ups-ft">
							<a href="{{ item.link_url }}" class="btn btn-primary" onClick="_gaq.push(['_trackEvent', 'button', '{{item.post_title}}', '{{ item.link_url }}']);">{{ item.link_label }}</a>
						</div>
					</div>
				{% endfor %}
				</div>
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<ul class="keywords">
							{% for cat in usps_categories %}
								<li><span class="label label-default">{{cat.name}}</span></li>
							{% endfor %}
						</ul>
					</div>



			</div>
		</section>

		<section id="about">
			<div class="container">
				<div class="row">
					<div class="col-sm-3 col-sm-offset-1">
						<aside>
							<img src="{{about.thumbnail.src('full')}}" class="img-responsive">
							<ul>
								{% for spec in about.get_field('specifications') %}
								<li>{{spec.option_spec}}</li>
								{% endfor %}
							</ul>
						</aside>
					</div>
					<div class="col-sm-6">
						<h2>{{about.title}}</h2>
						<p>{{about.content}}</p>


						<div class="panel panel-default pricing">
						  <div class="panel-heading">
						    <h3 class="panel-title">{{about.get_field('pricing_header')}}</h3>
							<p>{{about.get_field('pricing_subtitle')}}</p>
						  </div>
						  <div class="panel-body">
								{% for price in about.get_field('pricing_option') %}
								<div class="col-sm-6 business">
									<h4>{{price.option_title}}</h4>
						    		<p>starting at</p>
										<h5>&euro; {{price.option_price}}</h5>
									</div>
									{% endfor %}
						  </div>
						</div>
						<p class="lead">
							<a href="{{about.get_field('try_url')}}" class="btn btn-primary" onClick="_gaq.push(['_trackEvent', 'button', '{{about.get_field('try_label')}}', '{{about.get_field('try_url')}}']);">{{about.get_field('try_label')}}</a>
							<a href="{{about.get_field('more_url')}}" class="btn btn-link" onClick="_gaq.push(['_trackEvent', 'button', '{{about.get_field('more_label')}}', '{{about.get_field('more_url')}}']);">{{about.get_field('more_label')}}</a>
						</p>
					</div>
				</div>
			</div>
		</section>

		<section id="demo">
			<div class="container">
				<div class="row">
					<div class="col-sm-12">
						<h2>{{trynow.title}}</h2>
						<a href="{{trynow.get_field('button_url')}}" class="btn btn-default btn-lg" onClick="_gaq.push(['_trackEvent', 'button', '{{trynow.get_field('button_label')}}', '{{trynow.get_field('button_url')}}']);">{{trynow.get_field('button_label')}}</a>
					</div>
				</div>
			</div>
		</section>

		<section id="testimonials">
			<div class="container">
				<div class="row">
					<div class="col-sm-8 col-sm-offset-2">
						<div id="slider" class="flexslider">

							<ul class="slides">
								{% for person in testimonials %}
								<li>
									<blockquote>{{person.quote}}</blockquote>
									<p>&mdash; {{person.author_name}}</p>
									<small>{{person.author_description}}</small>
								</li>
								{% endfor %}
							</ul>
						</div>
					</div>
					<div class="col-sm-12">
						<div id="carousel" class="flexslider">
							<ul class="slides">
								{% for img in testimonials %}
								<li><img src="{{img.thumbnail.src}}"></li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="newsletter">
			<div class="container">
				<div class="row">
					<div class="col-sm-12"><h2>{{newsletter.title}}</h2></div>
				</div>
				<div class="row">
					<form id="newsletter-form" action="http://pre-sustainability.createsend.com/t/j/s/tjitlh/" method="post" class="form-inline" role="form">
						<div class="form-group">
							<label class="sr-only" for="{{newsletter.Input_fields_0_label_for}}">{{newsletter.Input_fields_0_label_name}}</label>
							<input class="form-control" placeholder="{{newsletter.Input_fields_0_input_placeholder}}" id="{{newsletter.Input_fields_0_input_id}}" name="{{newsletter.Input_fields_0_input_name}}" type="{{newsletter.Input_fields_0_input_type}}"/>
						</div>
						<div class="form-group">
							<label class="sr-only" for="{{newsletter.Input_fields_1_label_for}}">{{newsletter.Input_fields_1_label_name}}</label>
							<input class="form-control" placeholder="{{newsletter.Input_fields_1_input_placeholder}}" id="{{newsletter.Input_fields_1_input_id}}" name="{{newsletter.Input_fields_1_input_name}}" type="{{newsletter.Input_fields_1_input_type}}"/>
						</div>
						<div class="form-group">
							<label class="sr-only" for="{{newsletter.Input_fields_2_label_for}}">{{newsletter.Input_fields_2_label_name}}</label>
							<input class="form-control" placeholder="{{newsletter.Input_fields_2_input_placeholder}}" id="{{newsletter.Input_fields_2_input_id}}" name="{{newsletter.Input_fields_2_input_name}}" type="{{newsletter.Input_fields_2_input_type}}" required/>
						</div>

						<!--<pre>{{dump(newsletter)}}</pre>-->

						<button type="submit" class="btn btn-default btn-lg" id="{{newsletter.get_field('id')}}" onClick="_gaq.push(['_trackEvent', 'button', 'Subscribe', 'http://pre-sustainability.createsend.com/t/j/s/tjitlh/']);">{{newsletter.get_field('name')}}</button>
						<p>{{newsletter.get_field('info_text')}}</p>
						<input type="hidden" id="fieldddlihi-1" name="cm-fo-ddlihi" value="675878" />
					</form>
				</div>
			</div>
		</section>

		<section id="contact">
			<div class="container">
				<div class="row">
					{% for item in support %}
					<div class="col-sm-4">
						<h3>{{item.title}}</h3>
						<p>{{item.support_content}}</p>
						<div class="ft">
							<a href="{{item.support_url}}" class="btn btn-link" onClick="_gaq.push(['_trackEvent', 'button', '{{item.title}}', '{{item.support_url}}']);">{{item.support_label}}</a>
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
		</section>
{% endblock %}
